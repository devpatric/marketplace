{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "CSS/*": [
        "resources/assets/css/*"
      ],
      "JS/*": [
        "resources/assets/js/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "resources/assets/js/lib/types"
    ],
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "resources/assets"
  ],
  "exclude": [
    "node_modules",
    "node_modules/laravel-echo/src/channel/pusher-presence-channel.ts",
    "node_modules/laravel-echo/src/channel/pusher-private-channel.ts",
    "node_modules/laravel-echo/src/channel/socketio-channel.ts",
    "node_modules/laravel-echo/src/channel/socketio-presence-channel.ts",
    "node_modules/laravel-echo/src/channel/socketio-private-channel.ts",
    "node_modules/laravel-echo/src/util/event-formatter.ts"
  ]
}